@{
    ViewData["Title"] = "Home Page";
}

<div class="card text-center">
    <h1 class="display-2">Welcome to WebStore</h1>
    <hr />
    <div class="row justify-content-center">
        <p class="col-8 text-justify">
            Your Ultimate Entertainment Hub! Dive into a world where the stories come alive, adventures await, and memories are made.
            From gripping novels and blockbuster films to immersive games that transport you to another realm, we've curated a collection 
            that caters to every taste. Discover, explore, and lose yourself in the magic of storytelling. Your next favorite is just a click away</p>
    </div>
</div>

<div class="card text-center row">
    <p class="display-4">Search our Wide Range of Products</p>
    <form action="@Url.Action("SearchResults", "Search")" method="post">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="e.g. Movies, Books" aria-label="Search Store" aria-describedby="basic-addon2" name="searchQuery">
            <div class="input-group-append">
                <button class="btn btn-dark" type="submit">Search</button>
            </div>
        </div>
    </form>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card text-center">
            <p class="display-4">My Orders</p>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Order ID</th>
                        <th scope="col">Order Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>21/8/2023</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>13/7/2023</td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>11/6/2023</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-center">
            <p class="display-4">Account Management</p>
    
        </div>
    </div>
</div>
